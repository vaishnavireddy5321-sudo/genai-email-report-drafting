# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/genai_email_report

# Flask Environment
FLASK_ENV=development
SECRET_KEY=change-this-to-a-random-secret-key

# JWT Configuration
JWT_SECRET_KEY=change-this-to-a-random-jwt-secret-key

# SQLAlchemy Settings
SQLALCHEMY_ECHO=True

# Test Database (optional)
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/genai_email_report_test

# Google Gemini API Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-3-flash-preview
GEMINI_TIMEOUT=30
GEMINI_TEMPERATURE=0.7

# Admin Bootstrap (optional, first-time setup)
# If enabled, the backend will create a single ADMIN user on startup
# only when no ADMIN exists yet.
ADMIN_BOOTSTRAP_ENABLED=false
ADMIN_BOOTSTRAP_USERNAME=admin
ADMIN_BOOTSTRAP_EMAIL=admin@example.com
ADMIN_BOOTSTRAP_PASSWORD=ChangeMe123!
